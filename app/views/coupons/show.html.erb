<div>
  <p> Coupon Name: <%= @coupon.name %> </p> 
  <p> Coupon status: <%= @coupon.status %> </p>
  <% if @coupon.pennies_off %>
    <p> Pennies Off: <%= @coupon.pennies_off %> </p>
    <% end %>
  <% if @coupon.percent_off %>
    <p>Percentage Off: <%= @coupon.percent_off %></p>
  <% end %>
  <p> Times Used: <%= @coupon.times_used %></p>
  <% if @coupon.status == "active" %>
    <%= button_to "Deactivate", { controller: "coupons", action: "update", coupon_status: 0 }, method: :patch %>
  <% end %>
  <% if @coupon.status == "inactive" %> 
    <%= button_to "Activate", { controller: "coupons", action: "update", coupon_status: 1 }, method: :patch %>
  <% end %>
</div>